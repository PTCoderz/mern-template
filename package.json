{
	"name": "mern-template",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
		"start:prod": "cd server && npm start",
		"start:dev": "concurrently \"cd server && npm run watch-server\" \"cd client && npm run dev\"",
		"install": "cd server && npm i && cd ../client && npm i",
		"lint": "npx eslint \"server/**/*.{js,ts}\" \"client/**/*.{ts[x],js[x]}\"",
		"prepare": "husky install"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/PTCoderz/mern-template.git"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/PTCoderz/mern-template/issues"
	},
	"homepage": "https://github.com/PTCoderz/mern-template#readme",
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^5.36.2",
		"@typescript-eslint/parser": "^5.36.2",
		"concurrently": "^7.3.0",
		"eslint": "^8.23.0",
		"eslint-plugin-react": "^7.31.6",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.3"
	},
	"dependencies": {
		"if-env": "^1.0.4"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": "npx eslint"
	}
}
